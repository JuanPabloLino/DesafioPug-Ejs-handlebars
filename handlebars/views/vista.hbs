<style>
    .table td,
    .table th {
        vertical-align: middle;
    }

    h1 {
        color: rgb(0, 0, 0);
    }

    hr {
        background-color: rgb(114, 105, 105);
    }

    .jumbotron {
        min-height: 100vh;
    }
</style>

<div class="jumbotron">
    <h1>Listado de productos</h1>
    <br>

    {{#if hayProductos}}
    <div class="table-responsive">
        <table class="table">
            <tr>
                <th>Nombre del producto</th>
                <th>Precio del producto</th>
                <th>Foto del producto</th>
            </tr>
            {{#each productos}}
            <tr>
                <td>{{this.title}}</td>
                <td>${{this.price}}</td>
                <td><img width="50" src={{this.thumbnail}} alt="not found"></td>
            </tr>
            {{/each}}
        </table>
    </div>
    {{else}}
    <h3 class="alert alert-warning">No se encontraron productos</h3>
    {{/if}}
    <br>
    <a href="/" type="button" class="btn btn-primary">Cargar un nuevo producto</a>
    
